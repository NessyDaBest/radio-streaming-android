<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".views.ContactActivity">

    <!-- Título de la pantalla de contacto -->
    <TextView
        android:id="@+id/contactTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="64dp"
        android:gravity="center"
        android:text="Contacta con Imagina Radio"
        android:textSize="22sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <!-- ScrollView para que el formulario sea desplazable -->
    <ScrollView
        android:id="@+id/contactScrollView"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintTop_toBottomOf="@id/contactTitle"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:padding="16dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <!-- Campo: Nombre -->
            <EditText
                android:id="@+id/etNombre"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Nombre"
                android:inputType="textPersonName"
                android:layout_marginBottom="8dp" />

            <!-- Campo: Apellidos -->
            <EditText
                android:id="@+id/etApellidos"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Apellidos"
                android:inputType="textPersonName"
                android:layout_marginBottom="8dp" />

            <!-- Campo: Email -->
            <EditText
                android:id="@+id/etEmail"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Email"
                android:inputType="textEmailAddress"
                android:layout_marginBottom="8dp" />

            <!-- Texto para el Spinner -->
            <TextView
                android:id="@+id/tvDepartamento"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="¿A qué departamento quieres dirigirte?"
                android:textSize="16sp"
                android:layout_marginTop="8dp"
                android:layout_marginBottom="4dp"/>

            <!-- Spinner para Departamento -->
            <Spinner
                android:id="@+id/spinnerDepartamento"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="8dp" />

            <!-- Campo: Mensaje -->
            <EditText
                android:id="@+id/etMensaje"
                android:layout_width="match_parent"
                android:layout_height="120dp"
                android:hint="Mensaje"
                android:gravity="top"
                android:inputType="textMultiLine"
                android:layout_marginBottom="16dp"
                android:background="@android:drawable/edit_text" />
            <Button
                android:id="@+id/btnEnviar"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="ENVIAR"
                android:layout_gravity="center"
                android:layout_marginBottom="20dp"/>

            <!-- Sección: Redes Sociales -->
            <TextView
                android:id="@+id/tvRedesSociales"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Síguenos en redes sociales"
                android:textStyle="bold"
                android:textSize="16sp"
                android:layout_marginBottom="20dp" />

            <LinearLayout
                android:id="@+id/socialLinksContainer"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center"
                android:layout_marginBottom="16dp">

                <ImageView
                    android:id="@+id/ivFacebook"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:src="@drawable/facebook_icon"
                    android:contentDescription="facebook"
                    android:layout_marginEnd="20dp" />

                <ImageView
                    android:id="@+id/ivTwitter"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:src="@drawable/twitter_icon"
                    android:contentDescription="twitter"
                    android:layout_marginStart="20dp" />

                <ImageView
                    android:id="@+id/ivInstagram"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:src="@drawable/instagram_icon"
                    android:contentDescription="instagram"
                    android:layout_marginStart="20dp" />
            </LinearLayout>
        </LinearLayout>
    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>
